// Create the below linked list:
// myLinkedList = {
//   head: {
//     value: 10
//     next: {
//       value: 5
//       next: {
//         value: 16
//         next: null
//       }
//     }
//   }
// };


// My solution
const checkIfTail = (theNext) => {
  if(theNext.next) {
    return checkIfTail(theNext.next)
  } else if (!theNext.next){
    return theNext
  }
}

class LinkedList {
  constructor(value) {
    this.head = {
      value: value,
      next: null
    };
    this.tail = this.head;
    this.length = 1;
  }

  append(value) {
    let tail = checkIfTail(this.head)
    tail.next = {
      value: value,
      next: null
    }
  }

}

let myLinkedList = new LinkedList(10);
myLinkedList.append(5);
myLinkedList.append(16);
console.log(myLinkedList);
